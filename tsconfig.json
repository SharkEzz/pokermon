{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleDetection": "force",
    "baseUrl": "./",
    "verbatimModuleSyntax": true,
    "esModuleInterop": true,
    "incremental": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noPropertyAccessFromIndexSignature": true,
    "outDir": "dist"
  },
  "include": ["src"]
}
